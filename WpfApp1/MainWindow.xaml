<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="458" Width="546">
    <Grid Margin="0,0,305,-6">
        <StackPanel Margin="0,0,-229,0">
            <ComboBox x:Name="ClientList" Width="253" SelectionChanged="ComboBox_SelectionChanged">

            </ComboBox>
            <Label x:Name="ClientFullName" Background="Red" Content="{Binding Text, ElementName=ClientList}" Width="253" />
        </StackPanel>
    </Grid>
</Window>
